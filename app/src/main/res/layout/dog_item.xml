<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dog"
            type="com.example.mydogapp.model.DogBreed" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_dog"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_dog_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:profileImage="@{dog.url}"
                tools:ignore="ContentDescription">
            </ImageView>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_dog_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{dog.name}"
                    android:textSize="20sp">
                </TextView>

                <ImageButton
                    android:id="@+id/ib_favor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/heart_sad"
                    tools:ignore="ContentDescription">
                </ImageButton>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_dog_origin"
                android:text="@{dog.origin}"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
